<%= form_with(model: @user, local: true, url: user_choose_new_or_edit) do |f| %>
  <% if @user.errors.any? %>
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :名前 %><br>
  <%= f.text_field :name %><br>
  <%= f.label :メールアドレス %><br>
  <%= f.text_field :email %><br>
  <%= f.label :パスワード %><br>
  <%= f.password_field :password %><br>
  <%= f.label :パスワード再確認 %><br>
  <%= f.password_field :パスワード再確認 %><br>
  <%= f.submit %><br>
<% end %>
