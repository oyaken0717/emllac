<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @post, url: posts_path, local: true) do |f| %>

  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :image %>
  <%= f.hidden_field :image_cache %>
  <% @post.tags.map(&:id).each do |id| %>
    <%= hidden_field_tag "post[tag_ids][]", id %>
  <% end %>
  <%= f.hidden_field :group %>

  <p>写真</p>
  <%= image_tag(@post.image.url) if @post.image.url %><br>
  <p>タイトル</p>
  <%= @post.title %>
  <p>本文</p>
  <%= @post.content %><br>
  <p>グループ</p><br>
  <%= @post.group.name %><br>
  <%= f.submit  "登録する" %>
<% end %>

<%= form_with(model: @post, url: new_post_path, local: true, method: "get") do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :image %>
  <%= f.hidden_field :image_cache %>
  <% @post.tags.map(&:id).each do |id| %>
    <%= hidden_field_tag "post[tag_ids][]", id %>
  <% end %>
  <%= f.submit "戻る", name: "back" %>
<% end %>
