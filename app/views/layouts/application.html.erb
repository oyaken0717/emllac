<!DOCTYPE html>
<html>
  <head>
    <title>Callme</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content=“width=device-width”>
  </head>
  <body>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Bootstrap</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" ><%= link_to "callme",root_path %></a>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "callmeとは", about_path %></li>
              <% if logged_in? %>
                <li><%= link_to "map", posts_path %></li>
                <li><%= link_to "新規投稿", new_post_path %></li>
                <li><%= link_to "グループメンバー", users_path %></li>
              <% end %>
              <% if logged_in? %>
                <li><%= link_to "ユーザー管理画面", admin_users_path if current_user.admin? %></li>
                <li><%= link_to "お気に入り一覧",favorites_path(current_user.id) if current_user %></li>
                <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
                <li><%= link_to "#{current_user.name}さん", user_path(current_user.id) %></li>
              <% else %>
                <li><%= link_to "新規登録", new_user_path %></li>
                <li><%= link_to "ログイン", new_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    <%= yield %>
  </body>
</html>
