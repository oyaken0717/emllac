<h1>新規登録</h1>
<%= link_to "一覧", admin_users_path %>
<% if @user.errors.any? %>
  <div id = "error_explanation">
    <h2><%= pluralize(@user.errors.count, "error" )%> prohibited this @user from being saved:<_h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <%= f.label :名前 %><br>
  <%= f.text_field :name %><br>
  <%= f.label :メールアドレス %><br>
  <%= f.text_field :email %><br>
  <%= f.label :管理者権限 %><br>
  <%= f.check_box :admin %><br>
  <%= f.label :パスワード %><br>
  <%= f.password_field :password %><br>
  <%= f.label :パスワード再確認 %><br>
  <%= f.password_field :パスワード再確認 %><br>
  <%= f.submit "登録"%><br>
<% end %>
